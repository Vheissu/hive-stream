{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": ["src/types"],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", ".vscode", "dist"]
}